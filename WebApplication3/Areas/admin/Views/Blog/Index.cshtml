@model List<Blog>
@{

    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class=" container">
    <div class="row">
        <div class=" col-lg-6">
            <a asp-area="admin" asp-controller="blog" asp-action="create">Ctrate</a>
        </div>
        <div class=" col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">SubTitle</th>
                        <th scope="col">User</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {

                            <th scope="row">@i</th>
                            <td><img src="~/Uploads/@item.Image" alt="Alternate Text" style="max-width:150px;max-height:150px" /></td>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>@item.User</td>
                            <td>
                                <a asp-area="admin" asp-controller="blog" asp-action="update" class=" btn btn-secondary" asp-route-id="@item.Id">Update</a>
                                <a asp-area="admin" asp-controller="blog" asp-action="delete" class=" btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('eminsen?')">Delete</a>
                            </td>
                        }
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>



